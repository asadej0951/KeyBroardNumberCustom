<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="text"
        android:textSize="15sp"
        android:inputType="number"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.asadej0951.keybroard_number_custom_library.KeyboardCustom
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:background_button="@drawable/btn_round_blue_status"
        app:image_button="@drawable/baseline_currency_bitcoin_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:size_button="50dp"
        app:text_color="@color/cardview_dark_background"
        app:layout_constraintTop_toBottomOf="@+id/edit_query"
        app:margin_button="20dp"
        app:font_family_keyboard="@font/sukhumvitsetboldttf"
       />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="click"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>